<%- include('partials/header') %>

<main class="about-page">
  <!-- Hero Section -->
  <section class="about-hero" style="background: linear-gradient(rgba(10, 36, 99, 0.8), rgba(10, 36, 99, 0.8)), url('/images/backgrounds/yugioh-about-bg.jpg') no-repeat center center/cover;">
    <div class="hero-content">
      <h1 class="hero-title">Sobre Nosotros</h1>
      <p class="hero-subtitle">Conoce más sobre Yu-Gi-Oh! Store</p>
    </div>
  </section>
  
    <div class="values-section">
      <h2 class="section-title">Nuestros Valores</h2>
      <div class="divider"></div>
      
      <div class="values-grid">
